<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/zasoby_layout"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/animation_2">



 <TextView
     android:id="@+id/textView5"
     android:layout_width="wrap_content"
     android:layout_height="40dp"
     android:layout_alignParentTop="true"
     android:layout_centerHorizontal="true"
     android:layout_marginTop="30dp"
     android:text="Wprowadź nowe zasoby firmy"
     android:textColor="@color/nieb"
     android:textSize="15dp"
     android:textStyle="bold" />

 <ToggleButton

     android:id="@+id/toggleButton"
     android:layout_width="150dp"
     android:layout_height="wrap_content"
     android:layout_below="@+id/textView5"
     android:layout_centerHorizontal="true"
     android:layout_marginTop="-10dp"
     android:layout_marginBottom="574dp"
     android:background="@drawable/custom_button"
     android:text="ToggleButton"
     android:textColor="@color/white"
     android:textOff="Kurier"
     android:textOn="Samochod" />

 <EditText
     android:id="@+id/imie"
     android:layout_width="match_parent"
     android:textColor="@color/nieb"
     android:layout_height="wrap_content"
     android:layout_alignTop="@id/toggleButton"
     android:textColorHint="#665528C8"
     android:layout_marginTop="60dp"
     android:layout_alignParentStart="true"
     android:layout_alignParentEnd="true"
     android:inputType="text"
     android:hint="Imie"
     android:backgroundTint="@color/nieb"/>

 <EditText
     android:id="@+id/nazwisko"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_below="@+id/imie"
     android:layout_alignParentStart="true"
     android:textColor="@color/nieb"
     android:inputType="text"
     android:layout_alignParentEnd="true"
     android:layout_centerHorizontal="true"
     android:layout_marginStart="0dp"
     android:layout_marginTop="0dp"
     android:layout_marginEnd="0dp"
     android:hint="Nazwisko"
     android:textColorHint="#665528C8"
     android:backgroundTint="@color/nieb"/>

 <EditText
     android:id="@+id/marka"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_alignTop="@id/toggleButton"
     android:layout_alignParentStart="true"
     android:layout_alignParentEnd="true"
     android:layout_marginTop="60dp"
     android:hint="Marka"
     android:inputType="text"
     android:textColor="@color/nieb"
     android:textColorHint="#665528C8"
     android:backgroundTint="@color/nieb"/>
 <EditText
     android:id="@+id/numer_kuriera"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_below="@+id/nazwisko"
     android:layout_alignParentStart="true"
     android:inputType="text"
     android:textColor="@color/nieb"
     android:layout_alignParentEnd="true"
     android:layout_centerHorizontal="true"
     android:layout_marginStart="0dp"
     android:layout_marginTop="0dp"
     android:layout_marginEnd="0dp"
     android:hint="Numer kuriera"
     android:textColorHint="#665528C8"
     android:backgroundTint="@color/nieb"/>
 <EditText
     android:id="@+id/model"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_below="@+id/marka"
     android:layout_alignParentStart="true"
     android:inputType="text"
     android:layout_alignParentEnd="true"
     android:layout_centerHorizontal="true"
     android:textColor="@color/nieb"
     android:layout_marginStart="0dp"
     android:layout_marginTop="0dp"
     android:layout_marginEnd="0dp"
     android:hint="Model samochodu "
     android:textColorHint="#665528C8"
     android:backgroundTint="@color/nieb"/>

 <EditText
     android:id="@+id/id_auto"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_below="@+id/numer_kuriera"
     android:layout_alignParentStart="true"
     android:layout_alignParentEnd="true"
     android:layout_centerHorizontal="true"
     android:layout_marginStart="0dp"
     android:layout_marginTop="0dp"
     android:layout_marginEnd="0dp"
     android:backgroundTint="@color/nieb"
     android:hint="Identyfikator samochodu"
     android:inputType="text"
     android:textColor="@color/nieb"
     android:textColorHint="#665528C8" />

 <EditText
     android:id="@+id/rejestracja"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_below="@+id/model"
     android:layout_alignParentStart="true"
     android:layout_alignParentEnd="true"
     android:layout_centerHorizontal="true"
     android:layout_marginStart="0dp"
     android:layout_marginTop="0dp"
     android:layout_marginEnd="0dp"
     android:hint="Numer rejestracyjny samochodu"
     android:inputType="text"
     android:textColor="@color/nieb"
     android:textColorHint="#665528C8"
     android:backgroundTint="@color/nieb"/>
 <EditText
     android:id="@+id/stawka_za_paczke"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_below="@+id/id_auto"
     android:layout_alignParentStart="true"
     android:textColor="@color/nieb"
     android:inputType="text"
     android:layout_alignParentEnd="true"
     android:layout_centerHorizontal="true"
     android:layout_marginStart="0dp"
     android:layout_marginTop="0dp"
     android:layout_marginEnd="0dp"
     android:hint="Stawka za paczkę"
     android:textColorHint="#665528C8"
     android:backgroundTint="@color/nieb"/>
 <EditText
     android:id="@+id/koszt"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_below="@+id/rejestracja"
     android:layout_alignParentStart="true"
     android:inputType="text"
     android:textColor="@color/nieb"
     android:layout_alignParentEnd="true"
     android:layout_centerHorizontal="true"
     android:layout_marginStart="0dp"
     android:layout_marginTop="0dp"
     android:layout_marginEnd="0dp"
     android:hint="Koszt samochodu"
     android:textColorHint="#665528C8"
     android:backgroundTint="@color/nieb"/>

 <EditText
     android:id="@+id/stawka_za_odbior"
     android:layout_width="match_parent"

     android:layout_height="wrap_content"
     android:layout_below="@+id/stawka_za_paczke"
     android:layout_alignParentStart="true"
     android:layout_alignParentEnd="true"
     android:layout_centerHorizontal="true"
     android:layout_marginStart="0dp"
     android:layout_marginTop="0dp"
     android:layout_marginEnd="0dp"
     android:hint="Stawka za odbiór"
     android:inputType="text"
     android:textColor="@color/nieb"
     android:textColorHint="#665528C8"
     android:backgroundTint="@color/nieb"/>

 <EditText
     android:id="@+id/numer_kontaktowy"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_below="@+id/stawka_za_odbior"
     android:layout_alignParentStart="true"
     android:layout_alignParentEnd="true"
     android:layout_centerHorizontal="true"
     android:layout_marginStart="0dp"
     android:layout_marginTop="0dp"
     android:layout_marginEnd="0dp"
     android:hint="Numer kontaktowy "
     android:inputType="text"
     android:textColor="@color/nieb"
     android:textColorHint="#665528C8"
     android:backgroundTint="@color/nieb" />

 <Button

     android:id="@+id/zatwierdz"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_below="@+id/numer_kontaktowy"
     android:layout_centerInParent="true"
     android:layout_marginTop="50dp"
     android:background="@drawable/custom_button"
     android:paddingHorizontal="50dip"
     android:text="Zatwierdź"
     android:textColor="@color/white" />



 <!-- tutaj robic layout co ma wyswietlac sie w core w fragmencie -->
</RelativeLayout>