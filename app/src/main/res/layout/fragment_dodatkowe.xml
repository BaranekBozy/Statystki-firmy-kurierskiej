<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dodatkowe_layout"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/animation_2">


 <Button
     android:id="@+id/zatwierdz"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_below="@+id/data"
     android:layout_centerInParent="true"
     android:layout_marginTop="50dp"
     android:background="@drawable/custom_button"
     android:paddingHorizontal="50dip"
     android:text="Zatwierdź"
     android:textColor="@color/white" />

 <TextView
     android:id="@+id/textView5"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignParentTop="true"
     android:layout_centerHorizontal="true"
     android:layout_marginTop="30dp"
     android:text="Wprowadź dodatkowe przychody lub koszta"
     android:textColor="@color/nieb"
     android:textStyle="bold"
     android:backgroundTint="@color/nieb"/>

 <EditText
     android:id="@+id/nr_kurier"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_below="@id/toggleButton"
     android:layout_centerHorizontal="true"
     android:layout_marginTop="60dp"
     android:ems="10"
     android:hint="Numer kuriera"
     android:inputType="textPersonName"
     android:textColor="@color/nieb"
     android:textColorHint="#665528C8"
     android:backgroundTint="@color/nieb"/>

 <EditText
     android:id="@+id/Opis"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_below="@id/nr_kurier"
     android:layout_centerHorizontal="true"
     android:ems="10"
     android:textColor="@color/nieb"
     android:inputType="textPersonName"
     android:hint="Opis"
     android:textColorHint="#665528C8"
     android:backgroundTint="@color/nieb"/>

 <EditText
     android:id="@+id/Przychod_koszt"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_below="@id/Opis"
     android:layout_centerHorizontal="true"
     android:textColor="@color/nieb"
     android:ems="10"
     android:inputType="textPersonName"
     android:hint="Kwota"
     android:textColorHint="#665528C8"
     android:backgroundTint="@color/nieb"/>

 <EditText
     android:id="@+id/data"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_below="@id/Przychod_koszt"
     android:layout_centerHorizontal="true"
     android:ems="10"
     android:inputType="date"
     android:hint="Data"
     android:textColor="@color/nieb"
     android:textColorHint="#665528C8"
     android:backgroundTint="@color/nieb"
     />

 <ToggleButton
     android:id="@+id/toggleButton"
     android:layout_width="150dp"
     android:layout_height="wrap_content"
     android:layout_below="@id/textView5"
     android:layout_centerHorizontal="true"
     android:layout_marginTop="30dp"
     android:background="@drawable/custom_button"
     android:text="ToggleButton"
     android:textColor="@color/white"
     android:textOff="Koszta"
     android:textOn="Przychody" />
</RelativeLayout>
